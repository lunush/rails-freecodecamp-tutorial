<h1 class="mb-4">Friends</h1>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Birthday</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Likes icecream</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.birthday %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.email %></td>
        <td>
          <% if friend.likes_icecream %>
            ✔️
          <% end %>
        </td>
        <td><%= link_to 'Show', friend, class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend), class:"btn btn-primary" %></td>
        <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class:"btn btn-primary" %>
